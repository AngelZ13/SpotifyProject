@model Omadiko.WebApp.Models.IndexHomeViewModel


<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            @*Latest Releases*@
            <div class="col-lg-12">
                <div class="iq-card iq-realease">
                    <div class="iq-card-header d-flex justify-content-between border-0">
                        <div class="iq-header-title">
                            <h4 class="card-title">Latest Realeases</h4>
                        </div>
                    </div>
                    <div class="iq-card-body  iq-realeses-back">
                        <div class="row">

                            <div class="col-lg-7">
                                <ul class="list-unstyled iq-song-slide mb-0 realeases-banner">
                                    @foreach (var album in Model.LatestReleases)
                                    {
                                        <li class="row">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="media align-items-center col-10 col-md-5">
                                                    <div class="iq-realese-song ">
                                                        <a href="~/Album/ShowAlbumDetails/@album.AlbumId"><img src="@Url.Content(album.PhotoUrl)" class="img-border-radius avatar-60 img-fluid" alt=""></a>
                                                    </div>
                                                    <div class="media-body text-white ml-3">
                                                        <p class="mb-0 iq-music-title">@album.Title</p>
                                                        <small>@album.Artist.Name @album.Artist.LastName</small>
                                                    </div>
                                                </div>
                                                <small class="mb-0 col-md-2  iq-m-time text-white">Released: @album.ReleaseDate.Month/@album.ReleaseDate.Year</small>
                                                <div class="iq-card-header-toolbar iq-music-drop d-flex align-items-center  col-md-1">
                                                    <div class="dropdown">
                                                        <span class="dropdown-toggle text-primary" id="dropdownMenuButton1" data-toggle="dropdown" aria-expanded="false" role="button">
                                                            <i class="ri-more-2-fill text-primary"></i>
                                                        </span>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton1" style="">
                                                            <a class="dropdown-item" href="~/Album/ShowAlbumDetails/@album.AlbumId"><i class="ri-eye-fill mr-2"></i>View Album Details</a>
                                                            <a class="dropdown-item" href="~/Artist/ShowArtistDetails/@album.Artist.ArtistId"><i class="ri-delete-bin-6-fill mr-2"></i>View Artist Details</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*Featured Artists*@
            <div class="col-lg-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between align-items-center">
                        <div class="iq-header-title">
                            <h4 class="card-title">Featured Artists</h4>
                        </div>
                        <div id="feature-album-artist-slick-arrow" class="slick-aerrow-block"></div>
                    </div>
                    <div class="iq-card-body">
                        <ul class="list-unstyled row feature-album-artist mb-0">
                            @foreach (var artist in Model.FeaturedArtists)
                            {
                                <li class="col-lg-2  iq-music-box">
                                    <a href="~/Artist/ShowArtistDetails/@artist.ArtistId">
                                        <div class="iq-thumb-artist">
                                            <div class="iq-music-overlay"></div>
                                            <img src="@Url.Content(artist.PhotoUrl)" class="w-100 img-fluid" alt="">
                                        </div>
                                    </a>
                                    <div class="feature-list text-center">
                                        <h5 class="font-weight-600  mb-0">@artist.Name @artist.LastName </h5>
                                    </div>
                                </li>
                            }
                        </ul>
                        <div class="d-flex flex-row-reverse iq-view">
                            <b class="mb-0 text-primary"><a href="~/Artist/ShowArtists">View All <i class="las la-angle-right"></i></a></b>
                        </div>
                    </div>
                </div>
            </div>
            @*Featured Albums*@
            <div class="col-lg-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between align-items-center">
                        <div class="iq-header-title">
                            <h4 class="card-title">Featured Albums</h4>
                        </div>
                        <div id="feature-album-slick-arrow" class="slick-aerrow-block"></div>
                    </div>
                    <div class="iq-card-body">
                        <ul class="list-unstyled row  feature-album iq-box-hover mb-0">
                            @foreach (var album in Model.FeaturedAlbums)
                            {
                                <li class="col-lg-2  iq-music-box">
                                    <div class="iq-card mb-0">
                                        <div class="iq-card-body p-0">
                                            <div class="iq-thumb">
                                                <div class="iq-music-overlay"></div>
                                                <a href="~/Album/ShowAlbumDetails/@album.AlbumId">
                                                    <img src="@Url.Content(album.PhotoUrl)" class="img-border-radius img-fluid w-100" alt="">
                                                </a>
                                                <div class="overlay-music-icon">
                                                    <a href="~/Album/ShowAlbumDetails/@album.AlbumId">
                                                        <i class="las la-play-circle"></i>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="feature-list text-center">
                                                <h5 class="font-weight-600 mb-0">@album.Title</h5>
                                                <p class="mb-0">@album.Artist.Name @album.Artist.LastName</p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                        <div class="d-flex flex-row-reverse iq-view">
                            <b class="mb-0 text-primary"><a href="~/Album/ShowAlbums">View All <i class="las la-angle-right"></i></a></b>
                        </div>
                    </div>
                </div>
            </div>
            @*Featured Songs*@
            <div class="col-lg-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between align-items-center">
                        <div class="iq-header-title">
                            <h4 class="card-title">Featured Songs</h4>
                        </div>
                        <div id="feature-album-slick-arrow" class="slick-aerrow-block"></div>
                    </div>
                    <div class="iq-card-body">
                        <ul class="list-unstyled row  iq-box-hover mb-0">
                            @foreach (var song in Model.FeaturedSongs)
                            {
                                <li class="col-xl-2 col-lg-3 col-md-4 iq-music-box">
                                    <div class="iq-card ">
                                        <div class="iq-card-body p-0">
                                            <div class="iq-thumb">
                                                <div class="iq-music-overlay"></div>
                                                <a href="~/Song/ShowSongDetails/@song.SongId">
                                                    @if (song.Albums.Count == 0)
                                                    {
                                                        <img src="~/Content/images/notavailable400x410.jpg" class="img-border-radius img-fluid w-100" alt="">
                                                    }
                                                    else
                                                    {
                                                        foreach (var album in song.Albums)
                                                        {
                                                            <img src="@Url.Content(album.PhotoUrl)" class="img-border-radius img-fluid w-100" alt="">

                                                        }
                                                    }
                                                </a>
                                                <div class="overlay-music-icon">
                                                    <a href="~/Song/ShowSongDetails/@song.SongId">
                                                        <i class="las la-play-circle"></i>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="feature-list text-center">
                                                <h6 class="font-weight-600  mb-0">@song.Title</h6>
                                                @if (song.Albums.Count == 0)
                                                {
                                                    <small>Not available</small>
                                                }
                                                else
                                                {
                                                    foreach (var album in song.Albums)
                                                    {
                                                        <small class="mb-0">@album.Artist.Name @album.Artist.LastName</small>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                        <div class="d-flex flex-row-reverse iq-view">
                            <b class="mb-0 text-primary"><a href="~/Song/ShowSongs">View All <i class="las la-angle-right"></i></a></b>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>