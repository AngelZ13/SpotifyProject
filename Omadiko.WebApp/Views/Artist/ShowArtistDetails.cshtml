@model Omadiko.Entities.Artist


<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="iq-card">
                    <div class="iq-card-body">
                        <div class="row">
                            <div class="col-lg-4">
                                <img src="@Url.Content(Model.PhotoUrl)" class="img-fluid w-100" alt="" />
                            </div>
                            <div class="col-lg-8">
                                <div class="d-flex align-items-top justify-content-between iq-music-play-detail">
                                    <div class="music-detail">
                                        <h3>Edyta Gorniak</h3>
                                        <p>Date of Birth: .....</p>
                                        <p>Age: .....</p>
                                        <p>Country: .....</p>


                                        <p class="mb-0">389382k Likes</p>

                                    </div>
                                    <div class="music-right">
                                        <div class="d-flex align-items-center">
                                            <div class="iq-circle mr-2 share"><a href="javascript:void();"><i class="las la-share-alt-square text-primary"></i></a></div>
                                            <div class="iq-circle mr-2"><a href="javascript:void();"><i class="ri-heart-fill  text-primary"></i></a></div>
                                            <div class="iq-circle">
                                                <a href="javascript:void();"><i class="las la-download text-primary"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="iq-card">
                <div class="iq-card-header d-flex justify-content-between align-items-center">
                    <div class="iq-header-title">
                        <h4 class="card-title">Albums of @Model.Name @Model.LastName</h4>
                    </div>
                </div>
                <div class="iq-card-body">
                    <ul class="list-unstyled row iq-box-hover mb-0">
                        <li class="col-lg-2  iq-music-box">
                            <div class="iq-card mb-0">
                                <div class="iq-card-body p-0">
                                    <div class="iq-thumb">
                                        <div class="iq-music-overlay"></div>
                                        <a href="~/Album/ShowAlbumDetails">

                                            <img src="~/MuzikTemplate/html-dark/images/dashboard/realease-song/11.png" class="img-border-radius img-fluid w-100" alt="">
                                        </a>
                                        <div class="overlay-music-icon">
                                            <a href="~/Album/ShowAlbumDetails">
                                                <i class="las la-play-circle"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="feature-list text-center">
                                        <h5 class="font-weight-600 mb-0">Doja Cat</h5>
                                        <p class="mb-0">Annie Lennox</p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
