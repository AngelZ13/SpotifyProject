@model IEnumerable<Omadiko.Entities.Album>


<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            @*Featured Albums*@
            <div class="col-lg-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between align-items-center">
                        <div class="iq-header-title">
                            <h4 class="card-title">Albums</h4>
                        </div>
                        <div class="nav-item nav-icon">
                            <div class="iq-search-bar">
                                <form action="#" class="searchbox">
                                    <input type="text" class="text search-input" placeholder="Search Here...">
                                    <a class="search-link" href="#"><i class="ri-search-line text-black"></i></a>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <ul class="list-unstyled row iq-box-hover mb-0">
                            @foreach (var album in Model)
                            {
                                <li class="col-lg-2  iq-music-box">
                                    <div class="iq-card mb-0">
                                        <div class="iq-card-body p-0">
                                            <div class="iq-thumb">
                                                <div class="iq-music-overlay"></div>
                                                <a href="~/Album/ShowAlbumDetails">

                                                    <img src="@Url.Content(album.PhotoUrl)" class="img-border-radius img-fluid w-100" alt="">
                                                </a>
                                                <div class="overlay-music-icon">
                                                    <a href="~/Album/ShowAlbumDetails/@album.AlbumId"></a>
                                                </div>
                                            </div>
                                            <div class="feature-list text-center">
                                                <p class="mb-0" style="font-size:small">@album.Artist.Name @album.Artist.LastName</p>
                                                <h6 class="font-weight-400 mb-0" style="font-size:small">@album.Title</h6>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
