@model IEnumerable<Omadiko.Entities.Album> 



@{
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<!-- Page Content  -->

<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Albums List</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a href="admin-add-writer.html" class="btn btn-primary">Add New Writer</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="data-tables table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">No</th>
                                        <th style="width: 5%;">Picture</th>
                                        <th style="width: 15%;">
                                            @Html.DisplayNameFor(model => model.Title)
                                        </th>
                                        <th style="width: 15%;">
                                            @Html.DisplayNameFor(model => model.Genres)
                                        </th>
                                        <th style="width: 15%;">
                                            @Html.DisplayNameFor(model => model.Duration)
                                        </th>
                                        <th style="width: 15%;">
                                            @Html.DisplayNameFor(model => model.ReleaseDate)
                                        </th>
                                        <th style="width: 35%;">Album Description</th>
                                        <th style="width: 10%;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var album in Model)
                                    {
                                        <tr>
                                            <td>1</td>
                                            <td>
                                                <img src="@Url.Content(album.Artist.PhotoUrl)" class="img-fluid avatar-50 rounded" alt="author-profile">
                                            </td>
                                            <td>
                                                @album.Title
                                            </td>
                                            <td>
                                                <ul>
                                                    @foreach (var genre in album.Genres)
                                                    {
                                                        <li>@genre.Kind</li>
                                                    }
                                                </ul>
                                            </td>
                                            <td>
                                                @album.Duration
                                            </td>
                                            <td>
                                                @album.ReleaseDate
                                            </td>
                                            <td>
                                                <p class="mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed rhoncus non elit a scelerisque.</p>
                                            </td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="admin-add-category.html"><i class="ri-pencil-line"></i></a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" href="#"><i class="ri-delete-bin-line"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>