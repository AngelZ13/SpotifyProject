@using Microsoft.AspNet.Identity
@using Omadiko.Entities.Models

<div class="iq-sidebar">
    <div class="iq-sidebar-logo d-flex justify-content-between">
        <a href="~/Home/Index" class="header-logo">
            <img src="~/MuzikTemplate/html-dark/images/logo.png" class="img-fluid rounded-normal" alt="">
            <div class="logo-title">
                <span class="text-primary text-uppercase">Muzik</span>
            </div>
        </a>
        <div class="iq-menu-bt-sidebar">
            <div class="iq-menu-bt align-self-center">
                <div class="wrapper-menu">
                    <div class="main-circle"><i class="las la-bars"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div id="sidebar-scrollbar">
        <nav class="iq-sidebar-menu">
            <ul id="iq-sidebar-toggle" class="iq-menu">
                <li class="active"><a href="~/Home/Index"><i class="las la-house-damage"></i>Home</a></li>
                <li><a href="~/Artist/ShowArtists"><i class="ion-ios-star"></i>Artists</a></li>
                <li><a href="~/Album/ShowAlbums"><i class="las la-headphones"></i>Albums</a></li>
                <li><a href="~/Song/ShowSongs"><i class="ion-ios-musical-notes"></i>Songs</a></li>
                <li>
                    <a href="#menu-level" class="iq-waves-effect collapsed" data-toggle="collapse" aria-expanded="false"><i class="ion-heart iq-arrow-left"></i><span>My Music</span><i class="ri-arrow-right-s-line iq-arrow-right"></i></a>
                    <ul id="menu-level" class="iq-submenu collapse" data-parent="#iq-sidebar-toggle">
                        <li><a href="~/ApplicationUser/FavouriteArtists/@User.Identity.GetUserId()"><i class="ion-ios-heart-outline"></i>Artists</a></li>
                        <li><a href="~/ApplicationUser/FavouriteAlbums/@User.Identity.GetUserId()"><i class="ion-ios-heart-outline"></i>Albums</a></li>
                        <li><a href="~/ApplicationUser/FavouriteSongs/@User.Identity.GetUserId()"><i class="ion-ios-heart-outline"></i>Songs</a></li>
                    </ul>
                </li>
                @if (User.IsInRole(Role.Admin))
                {
                    <li class="active"><a href="~/Admin/Index"><i class="fa fa-arrow-left"></i>back to Admin View</a></li>
                }

            </ul>
        </nav>
    </div>
</div>
