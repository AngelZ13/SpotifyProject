@using Omadiko.Entities.Models
@{
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<div id="content-page" class="content-page fit-image" style="margin:auto; background-image: url('/Content/images/testimage.jpg'); background-attachment:fixed; background-size:cover">
    <div class="container-fluid">
        <div class="row" style="justify-content:center">
            <div class="iq-card text-center" style="margin-top:100px">
                <div class="iq-card-body border text-center rounded">
                    <h3>Your Premium Selection:</h3>
                    <div style="padding:30px">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Membership Type</th>
                                    <th>Membership Price</th>
                                    <th>Quantity</th>
                                    <th>Sub Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var subscription in (List<Subscription>)Session["Subscription"])
                                {
                                    <tr>
                                        <td>@subscription.Membership.Type</td>
                                        <td>@subscription.Membership.SignUpFee</td>
                                        <td>@subscription.Quantity</td>
                                        <td>@(String.Format("{0:N0}", subscription.Membership.SignUpFee * subscription.Quantity)) EUR</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.ActionLink("Checkout with PayPal", "PaymentWithPaypal", "Subscription", new { @class = "btn btn-primary mt-5" })
                    </div>
                    <p>or</p>
                    @Html.ActionLink("Back to Premium Page", "Premium", "Main", null, new { onclick = "return confirm ('Are you sure you want to return to Premium Page? By doing this, the current transaction will be cancelled.');" })
                </div>
            </div>
        </div>

    </div>
</div>



